<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T4sV1.Views.DashboardPage">

    <VerticalStackLayout Padding="20">

        <!-- Welcome + Date -->
        <Label Text="{Binding WelcomeText}" FontSize="20" FontAttributes="Bold" />
        <Label Text="{Binding TodayString}" FontSize="14" />

        <!-- Child Picker Dropdown (swap later) -->
        <Picker Title="Select Child"
                ItemsSource="{Binding Children}"
                ItemDisplayBinding="{Binding FullName}"
                SelectedItem="{Binding SelectedChild}" />

        <!-- Latest Measurement Summary -->
        <Frame BorderColor="LightGray" Padding="10" Margin="10,20,10,10">
            <VerticalStackLayout>
                <Label Text="Latest Measurement" FontAttributes="Bold" FontSize="16" />
                <Label Text="Weight:" />
                <Label Text="{Binding LastWeightDisplay}" FontAttributes="Bold" />
                <Label Text="Height:" Margin="0,10,0,0" />
                <Label Text="{Binding LastHeightDisplay}" FontAttributes="Bold" />
            </VerticalStackLayout>
        </Frame>

        <!-- Health Score -->
        <Frame BorderColor="LightGray" Padding="10" Margin="10">
            <VerticalStackLayout>
                <Label Text="Latest Health Score" FontAttributes="Bold" FontSize="16" />
                <Label Text="{Binding LatestOverallHealthScore}" FontAttributes="Bold" FontSize="22" />
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
