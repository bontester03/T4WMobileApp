<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="T4sV1.Views.SelectActiveChildPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:T4sV1.Converters"
    Title="Select Active Child">

    <ContentPage.Resources>
        <conv:ReferenceEqualityMultiConverter x:Key="RefEq" />
    </ContentPage.Resources>

    <Grid Padding="16" RowDefinitions="Auto,*,Auto" RowSpacing="12">

        <Label Text="Pick a child to set as active." />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        SelectedItem="{Binding Selected, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="12" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                        <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="#eee" />
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="{Binding ChildName}" FontAttributes="Bold" />
                            <Label Text="{Binding Age, StringFormat='Age: {0}'}" FontSize="12" Opacity="0.7" />
                        </VerticalStackLayout>

                        <!-- âœ… Radio is checked when current item == Selected -->
                        <RadioButton Grid.Column="2">
                            <RadioButton.IsChecked>
                                <MultiBinding Converter="{StaticResource RefEq}">
                                    <!-- Selected from the page's BindingContext -->
                                    <Binding Source="{RelativeSource AncestorType={x:Type ContentPage}}"
                                             Path="BindingContext.Selected" />
                                    <!-- Current item (.) -->
                                    <Binding Path="." />
                                </MultiBinding>
                            </RadioButton.IsChecked>
                        </RadioButton>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2" Text="Set Active" Command="{Binding SaveCommand}" />
    </Grid>
</ContentPage>
