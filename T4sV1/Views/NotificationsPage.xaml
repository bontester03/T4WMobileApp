<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="T4sV1.Views.NotificationsPage"
             Title="Notifications"
             BackgroundColor="#FAFAFA">

    <ScrollView>
        <ScrollView.Background>
            <!-- StartPoint defaults to (0,0) -->
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Color="#e9fdb6" Offset="0.1" />
                <GradientStop Color="#9dc052" Offset="1.0" />
            </LinearGradientBrush>
        </ScrollView.Background>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="ðŸ”” Notifications"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"

                   HorizontalOptions="Center" />

            <!-- Notification List -->
            <CollectionView ItemsSource="{Binding Notifications}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#E0E0E0"
         BackgroundColor="#f6ffe4"
        StrokeShape="RoundRectangle 12"
        Padding="15"
        Margin="0,5">
                            <Border.Shadow>
                                <Shadow Brush="Black"
                Offset="2,2"
                Radius="4"
                Opacity="0.3" />
                            </Border.Shadow>

                            <VerticalStackLayout Spacing="8">
                                <Label Text="{Binding Message}"
               FontAttributes="Bold"
               FontSize="16"
               TextColor="#34495E"
               LineBreakMode="WordWrap" />

                                <Label Text="{Binding CreatedAt, StringFormat='ðŸ—“ {0:dd MMM yyyy HH:mm}'}"
               FontSize="12"
               TextColor="#7F8C8D"
               HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
