<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Shell.NavBarHasShadow="False"
             x:Class="T4sV1.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="#FAFAFA">

    <ScrollView>
        <ScrollView.Background>
            <!-- StartPoint defaults to (0,0) -->
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Color="#e9fdb6" Offset="0.1" />
                <GradientStop Color="#9dc052" Offset="1.0" />
            </LinearGradientBrush>
        </ScrollView.Background>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="ðŸ‘¤ Personal Profile"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center" />

            <!-- Profile Info Card -->
            <Border Stroke="#D1D1D1"
        StrokeThickness="1"
        Padding="20"
         BackgroundColor="#f6ffe4"
        StrokeShape="RoundRectangle 16">
                <Border.Shadow>
                    <Shadow Brush="Black"
                Offset="2,2"
                Radius="4"
                Opacity="0.3" />
                </Border.Shadow>

                <Grid ColumnSpacing="10" RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Row 0 -->
                    <Label Grid.Row="0" Grid.Column="0" Text="ðŸ« School:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding PersonalDetails.School}" TextColor="#2C3E50" />

                    <!-- Row 1 -->
                    <Label Grid.Row="1" Grid.Column="0" Text="ðŸ“š Class:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding PersonalDetails.Class}" TextColor="#2C3E50" />

                    <!-- Row 2 -->
                    <Label Grid.Row="2" Grid.Column="0" Text="ðŸ‘ª Parent:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding PersonalDetails.ParentGuardianName}" TextColor="#2C3E50" />

                    <!-- Row 3 -->
                    <Label Grid.Row="3" Grid.Column="0" Text="ðŸ‘¥ Relationship:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding PersonalDetails.RelationshipToChild}" TextColor="#2C3E50" />

                    <!-- Row 4 -->
                    <Label Grid.Row="4" Grid.Column="0" Text="ðŸ“ž Phone:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding PersonalDetails.TeleNumber}" TextColor="#2C3E50" />

                    <!-- Row 5 -->
                    <Label Grid.Row="5" Grid.Column="0" Text="âœ‰ï¸ Email:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="5" Grid.Column="1" Text="{Binding PersonalDetails.Email}" TextColor="#2C3E50" />

                    <!-- Row 6 -->
                    <Label Grid.Row="6" Grid.Column="0" Text="ðŸ“ Postcode:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="6" Grid.Column="1" Text="{Binding PersonalDetails.Postcode}" TextColor="#2C3E50" />

                    <!-- Row 7 -->
                    <Label Grid.Row="7" Grid.Column="0" Text="ðŸ¥ GP Practice:" FontAttributes="Bold" TextColor="#34495E" />
                    <Label Grid.Row="7" Grid.Column="1" Text="{Binding PersonalDetails.GPPractice}" TextColor="#2C3E50" />
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>